<% provide(:title, "Edit Comment") %>
<h1>Update Comment</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@comment) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
	 <div class="field">
	      <%= f.label :content %>
	      <%= f.text_area :content %>
      </div>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>